<!--navigation bar-->
<nav>
  <div class="container">
    <div class="nav-wrapper">
      <a href="<%= books_path %>" class="brand-logo left"><i class="material-icons hide-on-small-only"> book</i> LaBooks</a>
      <ul class="right">
        <li>
          <a id="search-toggle" class="tooltipped" data-position="bottom" data-delay="50" data-tooltip="Search Books">
            <i class="material-icons">search</i>
          </a>
        </li>
        <% if current_user %>
          <li>
            <a href="<%= user_favorite_books_path(current_user.id) %>"
               class="tooltipped" data-position="bottom" data-delay="50" data-tooltip="Show Favorites">
              <i class="material-icons">grade</i>
            </a>
          </li>
          <li>
            <a href="<%= user_rental_path(current_user.id) %>"
               class="tooltipped" data-position="bottom" data-delay="50" data-tooltip="Show Rentals">
              <i class="material-icons">book</i>
            </a>
          </li>
          <li>
            <a href="<%= edit_user_registration_path %>"
               class="tooltipped" data-position="bottom" data-delay="50" data-tooltip="Edit Account">
              <i class="material-icons">person</i>
            </a>
          </li>
          <li>
            <%= link_to destroy_user_session_path, :method => :delete, :class => 'tooltipped', 'data-positon' => 'bottom', 'data-delay' => '50', 'data-tooltip' => 'Logout' do %>
              <i class="material-icons">book</i>
            <% end %>
          </li>
          <% if current_user.admin? %>
            <li>
              <a href="<%= admins_path %>"
                 class="tooltipped" data-position="bottom" data-delay="50" data-tooltip="Admin">
                <i class="material-icons">settings</i>
              </a>
            </li>
          <% end %>
        <% end %>
      </ul>
    </div>
  </div>
</nav>

<% if user_signed_in? %>
  <div class="container">
    <div id="search" class="card-panel grey lighten-3" style="<%= "display:none;" if params[:q].blank? %>">
      <%= form_tag search_books_path, method: :get, class: 'input-field' do %>
        <p class="row">
          <i class="material-icons prefix">search</i>
          <%= text_field_tag "q", params[:q], class: 'validate' %>
          <label for="q" class="active">Search</label>
          <%= submit_tag "検索", class: 'waves-effect waves-light btn col s4 offset-s4' %>
        </p>
      <% end %>
    </div>
  </div>
<% end %>
