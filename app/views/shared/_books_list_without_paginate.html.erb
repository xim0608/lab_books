<div class="row">
  <% @books.each do |book| %>
      <div class="col s12 m6">
        <div class="card small horizontal z-depth-5">
          <div class="card-image">
            <%= smaller_book_image book.image_url %>
          </div>
          <div class="card-stacked">
            <div class="card-content">
              <p><%= book.name %></p>
              <small>
                著者：<%= book.author %><br>
                <span class="grey-text"><%= cut_description(book.description) if book.description.present? %></span>
              </small>
            </div>

          </div>
        </div>
      </div>
  <% end %>
</div>

<script type="text/javascript" src="jquery.matchHeight.js"></script>
<script>
  $(function(){
    $('.js-matchHeight').matchHeight();
  });
</script>
