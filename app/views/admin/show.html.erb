<h1><%= @user.name %>の貸し出し状況</h1>
<% @rentals.each do |rental| %>
    <p><%= rental.book.name %></p>
<% end %>

<h3>貸出修正/追加</h3>

<input type="text" id="form" placeholder="書名を入力してください" style="width: 250px;"/>
<ul id="result" class="collection" style="display: block; height: 55ex;">

</ul>

<script>
    $(document).on('keyup', '#form', function (e) {
        e.preventDefault();
        var input = $.trim($(this).val());
        $.ajax({
            url: '/api/inc_search',
            type: 'GET',
            data: ('q=' + input),
            processData: false,
            contentType: false,
            dataType: 'json'
        })
        //ここから追記
            .done(function (data) {
                $('#result').find('li').remove();
                $(data).each(function (i, book) {
                    var href = "<%= @user.id %>/" + book.id;
                    $('#result').append('<li class="collection-item">' + book.name + '<div align="right"><a href="' + href + '">貸出中にする</a></div></li>')
                });
            })
    });
</script>
